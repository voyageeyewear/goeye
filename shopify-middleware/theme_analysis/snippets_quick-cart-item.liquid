{% liquid
  comment
    Renders a product item display for the quick cart.

    Required parameters:
      - item: { Object } The current line item object.
      - section_settings: { Object } The parent section's settings.
      - parent_id: { String } An ID to be appended to 'quick-cart-item' and passed to quantity-input (should be unique).
  endcomment

  assign item_aspect_ratio = settings.cart_item_aspect_ratio

  if settings.cart_item_aspect_ratio == 'use_theme_settings'
    assign item_aspect_ratio = settings.product_listing_aspect_ratio
  endif

  assign parent_id = 'quick-cart-item-' | append: parent_id
-%}

<div
  class="quick-cart__item"
  data-input-item
  data-id="{{ item.id }}"
  data-product-id="{{ item.product_id }}"
  data-key="{{ item.key }}"
  {% if is_power_lens %}data-is-power-lens="true"{% endif %}
>
  <div class="quick-cart__item-image">
    <a href="{{ item.url }}" class="quick-cart__item-link">
      {%- render 'image',
        image: item.image,
        sizes: '120px',
        prioritize_loading: true,
        aspect_ratio: item_aspect_ratio,
        include_placeholder: true
      -%}
    </a>
  </div>

  <div class="quick-cart__item-details">
    <div class="quick-cart__item-top">
      <h4 class="quick-cart__item-title">
        <a href="{{ item.url }}">{{ item.product.title }}</a>
      </h4>

      <div class="quick-cart__item-price-wrapper fs-body-75">
        {% liquid
          # Check for compare at price discount
          assign has_compare_discount = false
          assign compare_at_price = item.variant.compare_at_price
          assign current_price = item.variant.price
          assign discount_amount = 0
          assign discount_percentage = 0

          if compare_at_price and compare_at_price > current_price
            assign has_compare_discount = true
            assign discount_amount = compare_at_price | minus: current_price
            assign discount_percentage = discount_amount | times: 100.0 | divided_by: compare_at_price | floor
          endif

          # Check if there are automatic discounts applied
          assign has_auto_discount = false
          if item.line_level_discount_allocations.size > 0
            assign has_auto_discount = true
          endif
        -%}

        <div class="quick-cart__item-pricing-display">
          {% if is_bogo_free_item -%}
            {%- comment -%} This is a FREE item in BOGO - show struck price + Rs. 0.00 {%- endcomment -%}
            {% liquid
              assign original_price_display = compare_at_price | money
              if section_settings.show_product_currency
                assign original_price_display = original_price_display | append: ' ' | append: cart.currency.iso_code
              endif
            %}
            <div class="quick-cart__price-row">
              <span class="quick-cart__compare-price">{{ original_price_display }}</span>
              <span class="quick-cart__free-price-zero">Rs. 0.00{% if section_settings.show_product_currency %} {{ cart.currency.iso_code }}{% endif %}</span>
            </div>
            <ul class="quick-cart__item-discounts quick-cart__item-discounts--bogo-free">
              <li class="quick-cart__item-discount fs-body-60">
                {%- render 'icon', icon: 'discount-badge' -%}
                BUY 1 GET 1 FREE (-{{ original_price_display }})
              </li>
            </ul>

          {%- elsif is_paid_bogo_item -%}
            {%- comment -%} This is a PAID item in BOGO - show ONLY compare_at_price (full MRP) {%- endcomment -%}
            {% liquid
              assign display_price = compare_at_price | money
              if section_settings.show_product_currency
                assign display_price = display_price | append: ' ' | append: cart.currency.iso_code
              endif
            %}
            <div class="quick-cart__price-row">
              <span class="quick-cart__current-price">{{ display_price }}</span>
            </div>

          {%- else -%}
            {%- comment -%} Regular pricing - for single items OR 3rd, 5th, 7th+ items in BOGO {%- endcomment -%}
            {% liquid
              # Use variant price (not affected by automatic discounts)
              assign display_price = current_price | money
              assign compare_price_formatted = compare_at_price | money

              if section_settings.show_product_currency
                assign display_price = display_price | append: ' ' | append: cart.currency.iso_code
                assign compare_price_formatted = compare_price_formatted | append: ' ' | append: cart.currency.iso_code
              endif
            %}

            <div class="quick-cart__price-row">
              {% if has_compare_discount -%}
                {%- comment -%} Show compare at price (crossed out) {%- endcomment -%}
                <span class="quick-cart__compare-price">{{ compare_price_formatted }}</span>
              {%- endif %}
              <span class="quick-cart__current-price {% if has_compare_discount %}quick-cart__current-price--sale{% endif %}">{{ display_price }}</span>
            </div>

            {% if has_compare_discount -%}
              {%- comment -%} Show discount badge matching theme style {%- endcomment -%}
              <ul class="quick-cart__item-discounts quick-cart__item-discounts--compare-price">
                <li class="quick-cart__item-discount fs-body-60">
                  {%- render 'icon', icon: 'discount-badge' -%}
                  FLAT â‚¹{{ discount_amount | divided_by: 100 }} off
                </li>
              </ul>
            {%- endif %}
          {%- endif %}
        </div>

        {% render 'unit-price', item: item %}
      </div>

      {% unless item.product.has_only_default_variant -%}
        <p class="quick-cart__item-variant fs-body-60 t-opacity-50">{{ item.variant.title }}</p>
      {%- endunless %}

      {% if item.selling_plan_allocation -%}
        <p class="quick-cart__item-subscriptions fs-body-60 t-opacity-50">
          {{ item.selling_plan_allocation.selling_plan.name }}
        </p>
      {%- endif %}

      {%- assign property_count = item.properties | size -%}

      {% if property_count > 0 -%}
        <div class="quick-cart__form-item-properties fs-body-60 t-opacity-80">
          {% liquid
            for p in item.properties
              # Don't show property if property name begins with an underscore, or if property is blank.
              assign first_char = p.first | slice: 0

              unless p.last == blank or first_char == '_'
                capture property_content
                  echo p.first | append: ': '

                  if p.last contains '/uploads/'
                    echo p.last | split: '/' | last | link_to: p.last
                  else
                    echo p.last
                  endif
                endcapture

                echo '<p>'
                echo property_content
                echo '</p>'
              endunless
            endfor
          -%}
        </div>

        <script type="application/json" data-item-properties>
          {{ item.properties | json }}
        </script>
      {%- endif %}

      {% comment %} Hide automatic discount badges when BOGO pricing is applied {% endcomment %}
      {% unless apply_bogo_pricing -%}
        {% if item.line_level_discount_allocations.size > 0 -%}
          <ul class="quick-cart__item-discounts">
            {% for discount_allocation in item.line_level_discount_allocations -%}
              <li class="quick-cart__item-discount fs-body-60">
                {%- render 'icon', icon: 'discount-badge' -%}
                {{ discount_allocation.discount_application.title }} (-{{ discount_allocation.amount | money }})
              </li>
            {%- endfor %}
          </ul>
        {% endif %}
      {%- endunless %}
    </div>

    <div class="quick-cart__item-bottom">
      <p class="quick-cart__item-error fs-body-50 hidden">{{ 'cart.general.error' | t }}</p>

      {% if settings.cart_enable_low_inventory_warning -%}
        {% if item.variant.inventory_management != blank
          and item.variant.inventory_policy == 'deny'
          and item.variant.inventory_quantity < settings.cart_low_inventory_warning_threshold
        -%}
          <p class="quick-cart__inventory-warning fs-body-50">
            {{ 'cart.general.inventory_warning' | t: amount: item.variant.inventory_quantity }}
          </p>
        {%- endif %}
      {%- endif %}

      {%
        render 'quantity-input',
        parent_id: parent_id,
        prod: item.product,
        initial_value: item.quantity,
        use_border: true,
      %}

      <button type="button" data-remove-item class="quick-cart__item-remove fs-body-75 t-subdued btn btn--text-link">
        {{ 'cart.general.remove' | t }}
      </button>
    </div>
  </div>
</div>
